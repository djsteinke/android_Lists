<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/title"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/edit_title"/>
    <TextView
        android:id="@+id/tv_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/description"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/edit_desc"/>
    <GridLayout
        android:id="@+id/grid_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:columnCount="3"
        android:rowCount="3"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="5dp">
        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/red"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="3dp"
            android:backgroundTint="@color/group_red"
            android:background="@drawable/color_selector"/>
        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/orange"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="3dp"
            android:backgroundTint="@color/group_orange"
            android:background="@drawable/color_selector"/>
        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/yellow"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="3dp"
            android:backgroundTint="@color/group_yellow"
            android:background="@drawable/color_selector"/>
        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/green"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="3dp"
            android:backgroundTint="@color/group_green"
            android:background="@drawable/color_selector"/>
        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/blue"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="3dp"
            android:backgroundTint="@color/group_blue"
            android:background="@drawable/color_selector"/>
        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/purple"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="3dp"
            android:backgroundTint="@color/group_purple"
            android:background="@drawable/color_selector"/>
        <androidx.appcompat.widget.AppCompatImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="3dp"
            android:visibility="invisible"
            android:backgroundTint="@color/red"
            android:background="@drawable/color_selector"/>
        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/gray"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="3dp"
            android:backgroundTint="@color/off_white"
            android:background="@drawable/color_selector"/>
    </GridLayout>
</LinearLayout>