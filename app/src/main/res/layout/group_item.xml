<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="7dp"
    android:layout_marginBottom="10dp"
    android:elevation="10dp"
    android:backgroundTint="@color/off_white"
    android:background="@drawable/rounded_corner_rectangle">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/group_title"
        app:layout_constraintStart_toEndOf="@id/up_down"
        app:layout_constraintTop_toTopOf="@id/up_down"
        app:layout_constraintBottom_toBottomOf="@id/up_down"
        android:layout_marginStart="5dp"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:text="test"
        android:textStyle=""/>
    <androidx.appcompat.widget.AppCompatImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/up_down"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/ic_baseline_add_24"/>
    <TextView
        android:id="@+id/item_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        app:layout_constraintStart_toEndOf="@id/group_title"
        app:layout_constraintTop_toTopOf="@id/group_title"/>
    <androidx.appcompat.widget.AppCompatImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/edit_group"
        android:layout_marginStart="10dp"
        app:layout_constraintStart_toEndOf="@id/item_count"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/ic_baseline_edit_24"/>
    <androidx.appcompat.widget.AppCompatImageButton
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/pick_color"
        android:layout_marginEnd="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:visibility="gone"
        android:background="@drawable/color_wheel"/>
    <androidx.appcompat.widget.AppCompatImageButton
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/add_item"
        app:layout_constraintEnd_toStartOf="@id/pick_color"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginEnd="10dp"
        android:visibility="gone"
        android:background="@drawable/ic_playlist_add_black_24dp"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/group_recycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/group_title"
        app:layout_constraintStart_toStartOf="parent"/>
    <androidx.appcompat.widget.AppCompatImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/drag"
        android:layout_marginEnd="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/ic_baseline_drag_handle_24"/>

</androidx.constraintlayout.widget.ConstraintLayout>